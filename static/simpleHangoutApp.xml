<body>

<script src="//plus.google.com/hangouts/_/api/v1/hangout.js"></script>

<h3>Social Shopping Hangout App ANDREW</h3>

<div id="tabs-container">
    <ul class="tabs-menu">
        <li class="current"><a href="#tab-1">Shared View</a></li>
        <li><a href="#tab-2">Private View</a></li>
    </ul>
    <div class="tab">
        <div id="tab-1" class="tab-content">
            <iframe src="https://astore.amazon.com/247shoppingpr-20" width="100%" height="500" frameborder="0" scrolling="yes"></iframe>
        </div>
        <div id="tab-2" class="tab-content">
            <iframe src="https://astore.amazon.com/247shoppingpr-20" width="100%" height="500" frameborder="0" scrolling="yes"></iframe>
        </div>
    </div>
</div>


<div id="shoppingDiv"></div>

<script>

/** Kick off the app. */
function init() {
  // When API is ready...
  gapi.hangout.onApiReady.add(
      function(eventObj) {
        if (eventObj.isApiReady) {
          try {
            $(document).ready(function() {
                $(".tabs-menu a").click(function(event) {
                    event.preventDefault();
                    $(this).parent().addClass("current");
                    $(this).parent().siblings().removeClass("current");
                    var tab = $(this).attr("href");
                    $(".tab-content").not(tab).css("display", "none");
                    $(tab).fadeIn();
                });
            });
          } catch (e) {
            console.log('init:ERROR');
            console.log(e);
          }
        }
      });
}


// Wait for gadget to load.                                                       
gadgets.util.registerOnLoadHandler(init);
</script>
  
</body>
